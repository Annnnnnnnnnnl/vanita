<div class="container">
	<div class="row">
    <div class="panel panel-default">
    <div class="panel-heading">
      <h3>About This Pacakge</h3>
    </div>
  </div>

	<div class="panel panel-default">
		<div class="panel-body">
    <div class="col-md-8">
			<h3>Package details</h3>
					<p>Package Size:  <%= @package.size %>m<sup>3</sup></p><br>
          <p>Package Weight: <%= @package.weight %></p><br>
          <p>Warehouse: <%= @package.warehouse_location%></p><br>
          <hr>
          <p>Recipent Name: <%= @package.recipent_name %></p><br>
          <p>Recipent Mob: <%= @package.recipent_mob %></p><br>
          <p>Recipent Address: <%= @package.recipent_address %></p><br>
				</div>

        <div class="col-md-4">
        <h3>Address Map</h3>
          <div id="map"></div>

          				<style>
          		      #map {
          		        width: 100%;
          		        height: 300px;
          		      }
          		    </style>

          		    <script src="https://maps.googleapis.com/maps/api/js"></script>
          		    <script>
          		      function initialize() {
          		        var mapCanvas = document.getElementById('map');
          		        var mapOptions = {
          		          center: new google.maps.LatLng(<%= @package.latitude %>, <%= @package.longitude %>),
          		          zoom: 14,
          		          mapTypeId: google.maps.MapTypeId.ROADMAP
          		        }
          		        var map = new google.maps.Map(mapCanvas, mapOptions);

          		        var marker = new google.maps.Marker({
          		        	position: new google.maps.LatLng(<%= @package.latitude %>, <%= @package.longitude %>),
          		        	title: "Vanita"
          		        });

          		        marker.setMap(map);
          		      }
          		      google.maps.event.addDomListener(window, 'load', initialize);
          		    </script>

          			</div>
          		</div>
							<center> <button class= "btn btn-primary">Accept Now</button><br></center>
							<br>
							<br>
							<br>

				</div>
		 </div>
    </div>
  </div>
</div>

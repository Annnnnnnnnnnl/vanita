<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <center>
            <%= image_tag get_avatar_url(current_user), class: "img-circle img-responsive img-seller-avatar" %>
            <h3><%= current_user.fullname %></h3>
        </center>
      </div>
      <div class="panel-body">
        <%= current_user.description %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h3>Tasks</h3>
      </div>
      <div class="panel-body">
        <% @packages.each do |package| %>
          <div class="row">

            <div class="col-md-7">
              <h4>Package distance :<%= package.distance %>km   Delivery time<%= package.delivery_time %>day</h4>
            </div>
            <div class="col-md-3">
              <%= link_to "Detail", edit_package_path(package), class: "btn btn-default pull-right" %>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>

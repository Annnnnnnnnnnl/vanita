<div class="row">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <center>
            <%= image_tag get_avatar_url(current_user), class: "img-circle img-responsive img-seller-avatar" %>
            <h3><%= current_user.fullname %></h3>
        </center>
      </div>
      <div class="panel-body">
        <%= current_user.description %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
          <h3>My Task</h3>
      </div>
      <div class="panel-body">
        <% @tasks.each do |task| %>
          <div class="row">
            <div class="col-md-2">
              <%= link_to package_path(task.package) do %>
              <p><%= task.package.distance %></p>
              <% end %>
            </div>
            <div class="col-md-2">
            <%= link_to package_path(task.package) do %>
            <p><%= task.package.distance.delivery_time%></p>
              <% end %>
            </div>
            <div class="col-md-2">
            <%= link_to package_path(task.package) do %>
            <p><%= task.package.distance.price%></p>
              <% end %>
            </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>
